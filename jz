void Array4_4()
{
	int A[4][4],B[4][4],i,j;
 
	printf("Please Input 16 numbers:");
	for(i = 0; i < 4; i++)
		for(j = 0; j < 4; j++)
		{
			scanf("%d",&A[i][j]);
			B[3-j][i] = A[i][j]; 
		}
	printf("Array A:\n"); 
	for( i = 0; i < 4; i++)
	{
		for(j = 0 ; j < 4; j++)
		{
			printf("%4d",A[i][j]);		
		}
		printf("\n");
	}
	printf("Array B:\n");   
	for( i = 0; i < 4; i++)
	{
		for(j = 0 ; j < 4; j++)
		{
			printf("%4d",B[i][j]);		
		}
		printf("\n");
	}
}
